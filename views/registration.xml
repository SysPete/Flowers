<specification>
<form name="registration" link="name">
<field name="email"/>
<field name="password"/>
<field name="verify"/>
</form>
<value name="form-errors" field="errors" op="toggle"  />
<container name="error-email" id="error-email" value="errors.email">
<list name="error-email" iterator="errors.email">
<param name="value" class="email-msg"/>
</list>
</container>
<container name="error-email" id="error-password" value="errors.password">
<list name="error-password" iterator="errors.password">
<param name="value" class="password-msg"/>
</list>
</container>
<container name="error-email" id="error-verify" value="errors.verify">
<list name="error-verify" iterator="errors.verify">
<param name="value" class="verify-msg"/>
</list>
</container>
</specification>
